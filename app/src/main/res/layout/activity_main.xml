<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agencia de turismo Paisa-Travel"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp">
        <TextView
            android:text="Nombre"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etnombre"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Ingrese Nombre"
            android:textSize="12dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp">

    <TextView
        android:text="Destino"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spdestino"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp">
        <TextView
            android:text="Fecha salida"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etfechaSalida"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Ingrese Fecha"
            android:textSize="12dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp">
        <TextView
            android:text="Número de personas"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etnumeroPersonas"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Ingrese cantidad de personas"
            android:textSize="12dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:text="Numero de días"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="top"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginLeft="50dp"
                />
            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginLeft="50dp"
                />
            <RadioButton
                android:id="@+id/rb6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginLeft="50dp"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <TextView
        android:layout_margin="30dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Adicionales"
        android:gravity="center"

        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
    <Switch
        android:id="@+id/swtour"
        android:layout_width="match_parent"
        android:text="Tour por ciudad"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />
    <Switch
        android:id="@+id/swcdiscoteca"
        android:layout_width="match_parent"
        android:text="Discoteca"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:text="Total a pagar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ettotal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="12dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btncalcular"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:layout_margin="10dp"
            android:backgroundTint="#FFEB3B"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnlimpiar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:layout_margin="10dp"
            android:backgroundTint="#F44336"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>